{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "allowJs": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "types": ["react"],
  "experimentalDecorators": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
